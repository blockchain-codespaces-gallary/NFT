{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start all",
            "dependsOn": [
                "Start Ganache",
                "Save Ganache endpoint to file",
                "Set Ganache port forwarding to public", // comment this task if running locally
                "Compile smart contracts",
                "Deploy smart contracts to Ganache",
                "npm: install",
                "npm: dev"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Start Ganache",
            "type": "shell",
            "command": "npx ganache --host 0.0.0.0 --port 7545",
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^.*$",
                        "file": 0,
                        "location": 0,
                        "message": 0,
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "RPC Listening on",
                }
            }
        },
        {
            "label": "Save Ganache endpoint to file",
            "type": "shell",
            "command": "echo \"https://${CODESPACE_NAME}-7545.githubpreview.dev\" > src/ganache.txt",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Set Ganache port forwarding to public",
            "type": "shell",
            // Currently hardcoded to 7545. It is possible to dynamically retrieve it from config file if we have a VSC extension
            "command": "gh codespace ports visibility 7545:public -c $CODESPACE_NAME"
        },
        {
            "label": "Compile smart contracts",
            "type": "shell",
            "command": "npx truffle compile"
        },
        {
            "label": "Deploy smart contracts to Ganache",
            "type": "shell",
            "command": "npx truffle migrate"
        },
    ]
}